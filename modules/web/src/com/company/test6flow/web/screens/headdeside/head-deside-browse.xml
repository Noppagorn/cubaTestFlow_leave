<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="headDesidesTable"
        messagesPack="com.company.test6flow.web.screens.headdeside">
    <data readOnly="true">
        <collection id="headDesidesDc"
                    class="com.company.test6flow.entity.HeadDeside"
                    view="headDeside-view">
            <loader id="headDesidesDl">
                <query>
                    <![CDATA[select e from test6flow_HeadDeside e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="headDesidesTable"
            spacing="true">
        <filter id="filter"
                applyTo="headDesidesTable"
                dataLoader="headDesidesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="headDesidesTable"
                    width="100%"
                    dataContainer="headDesidesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="headName"/>
                <column id="permission"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="headDesidesTable.create"/>
                <button id="editBtn" action="headDesidesTable.edit"/>
                <button id="removeBtn" action="headDesidesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
